{
  "name": "alphaflow-trading-platform",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "next dev -p 3000 -H 0.0.0.0",
    "dev:server": "NODE_ENV=development tsx watch --tsconfig tsconfig.json server/index.ts",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' next build && npm run build:server",
    "build:client": "NODE_OPTIONS='--max-old-space-size=4096' next build",
    "build:server": "esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=server_dist",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:client": "next start -p 3000 -H 0.0.0.0",
    "start:server": "NODE_ENV=production node server_dist/index.js",
    "db:push": "drizzle-kit push",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "generate-tests": "tsx scripts/generate-tests-from-openspec.ts",
    "check:format": "prettier --check \"**/*.{js,ts,tsx,css,json}\"",
    "format": "prettier --write \"**/*.{js,ts,tsx,css,json}\"",
    "clean:code": "knip",
    "clean:deps": "npx depcheck",
    "optimize:images": "tsx scripts/optimize-images.ts",
    "analyze": "ANALYZE=true npm run build:client",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@opentelemetry/api": "^1.9.0",
    "@radix-ui/react-alert-dialog": "^1.1.1",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slider": "^1.2.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@sendgrid/mail": "^8.1.6",
    "@supabase/supabase-js": "^2.89.0",
    "@tanstack/react-query": "^5.90.7",
    "@types/bull": "^3.15.9",
    "autoprefixer": "^10.4.23",
    "axios-cookiejar-support": "^6.0.5",
    "bcryptjs": "^3.0.3",
    "bottleneck": "^2.19.5",
    "bull": "^4.16.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cookie-parser": "^1.4.7",
    "decimal.js": "^10.6.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "framer-motion": "^12.23.26",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "isomorphic-dompurify": "^2.34.0",
    "lucide-react": "^0.446.0",
    "next": "^14.2.35",
    "next-themes": "^0.3.0",
    "node-cron": "^4.2.1",
    "openai": "^6.14.0",
    "opossum": "^9.0.0",
    "p-limit": "^7.2.0",
    "p-retry": "^7.1.1",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.12.7",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^3.3.3",
    "tailwindcss-animate": "^1.0.7",
    "tough-cookie": "^6.0.0",
    "tsx": "^4.20.6",
    "vitest": "^4.0.15",
    "ws": "^8.18.0",
    "zod": "^3.25.76"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.1.1",
    "@tanstack/react-query-devtools": "^5.91.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.21",
    "@types/node": "^20.6.2",
    "@types/node-cron": "^3.0.11",
    "@types/opossum": "^8.1.9",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.25.12",
    "eslint": "^8.49.0",
    "eslint-config-next": "^14.2.35",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "knip": "^5.78.0",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.6.2",
    "sharp": "^0.34.5",
    "typescript": "^5.2.2"
  },
  "overrides": {
    "glob": "10.5.0"
  }
}
