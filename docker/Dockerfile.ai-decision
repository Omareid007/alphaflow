# AI Decision Service Dockerfile
# Multi-stage build for AI/LLM decision engine

FROM node:22-alpine AS base
RUN apk add --no-cache dumb-init curl && rm -rf /var/cache/apk/*
WORKDIR /app
RUN addgroup -g 1001 -S nodejs && adduser -S nodejs -u 1001

FROM base AS builder
COPY package*.json ./
RUN npm ci --include=dev
COPY . .
RUN npx tsc -p services/tsconfig.json
RUN npm prune --production

FROM base AS production
LABEL service="ai-decision" \
      version="1.0.0" \
      description="AI/LLM decision engine with model routing"

COPY --from=builder --chown=nodejs:nodejs /app/node_modules ./node_modules
COPY --from=builder --chown=nodejs:nodejs /app/services/dist ./dist
COPY --from=builder --chown=nodejs:nodejs /app/package.json ./

ENV NODE_ENV=production
ENV SERVICE_NAME=ai-decision
ENV PORT=3002
ENV METRICS_PORT=9002
ENV LLM_TIMEOUT_MS=30000
ENV LLM_MAX_RETRIES=3

EXPOSE 3002 9002
USER nodejs

HEALTHCHECK --interval=30s --timeout=10s --start-period=15s --retries=3 \
    CMD curl -f http://localhost:3002/health || exit 1

ENTRYPOINT ["dumb-init", "--"]
CMD ["node", "dist/ai-decision/index.js"]
